{{> navbar}}

{{#if producto}}
    <div class="container mb-4">
        <div class="row">
            <div id="carouselExampleControls" class="col carousel slide" data-bs-ride="carousel" style="background: #cccccc;">
                <div class="carousel-inner">
                    {{#each producto.imagen}}
                        <div class="carousel-item active" style="height: 30rem; overflow: hidden;">
                            <img src="{{this}}" class="d-block w-100" alt="{{producto.nombre}}" style="width: 100%; height: 100%; object-fit: contain;">
                        </div>
                    {{/each}}
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
            <div class="col">
                <h2>{{producto.nombre}}</h2>
                <p>{{producto.descripcion}}</p>
                <ul>
                    <li>id: {{producto.id}}</li>
                    <li>codigo: {{producto.codigo}}</li>
                    <li>precio: ${{producto.precio}}</li>
                    <li>precio mayoreo: ${{producto.preciomayoreo}}</li>
                    <li>cantidad mayoreo: {{producto.cantidadmayoreo}}</li>
                    <li>stock: {{producto.stock}}</li>
                    <li>marca: {{producto.marca}}</li>
                    <li>departamento: {{producto.departamento}}</li>
                    <li>categoria: {{producto.categoria}}</li>
                    <li>fecha: {{producto.fecha}}</li>
                    <li>ventas: {{producto.ventas}}</li>
                    <li>estado: {{producto.estado}}</li>
                </ul>
                <h4>Detalles:</h4>
                <p>{{producto.detalles}}</p>
                <div class="accordion accordion-flush" id="accordionFlushExample">
                    <a href="/productos" class="btn btn-success" style="color: #ffffff; text-decoration: none;">Regresar</a>
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="flush-headingOne">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne">
                                Selecciona una acción
                            </button>
                        </h2>
                        <div id="flush-collapseOne" class="accordion-collapse collapse" aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample">
                            <div class="accordion-body">
                                <a href="/productos/{{producto.id}}/update" class="btn btn-warning" style="color: #ffffff; text-decoration: none;">Modificar Producto</a>
                                <a href="/productos/{{producto.id}}/delete" class="btn btn-danger" onclick="return confirm('¿Estas seguro de eliminar este producto?')">Eliminar Producto</a>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>


{{/if}}